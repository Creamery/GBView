<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="4.5">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cont_scrollbar_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/scrollViewAbout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="2.7">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cont_record_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:clipToPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_scrollbar_title"
                app:layout_constraintVertical_weight="4.5">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cont_record_date_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_margin="0dp"
                    android:clipToPadding="false"
                    android:padding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_vp_date"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/sp_record_date"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:background="@color/white"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:padding="0dp"
                        android:popupBackground="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></Spinner>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:clipToPadding="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/sp_record_date"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iv_record_date_arrow_color"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/cd_blank"
                            android:cropToPadding="false"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/img_scroll_greenhighlight" />

                        <ImageView
                            android:id="@+id/iv_record_date_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:contentDescription="@string/cd_blank"
                            android:cropToPadding="false"
                            android:focusable="true"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/btn_scrolldown" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_vp_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/white"
                    android:gravity="center_vertical|end"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:text="@string/record_as_of"
                    android:textColor="@color/grey"
                    app:autoSizePresetSizes="@array/autosize_text_sizes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cont_record_date_spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_scrollbar_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:background="@color/white"
                android:gravity="bottom|center_horizontal"
                android:text="@string/patient_medical_record"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:autoSizePresetSizes="@array/autosize_text_sizes"
                app:layout_constraintBottom_toTopOf="@+id/cont_record_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="5.5" />

        </android.support.constraint.ConstraintLayout>


        <include
            android:id="@+id/scrollViewAbout"
            layout="@layout/scroll_patient_medical_record"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clipToPadding="false"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb_lime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cont_scrollbar_title"
            app:layout_constraintVertical_weight="7.3" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:padding="@dimen/context_margin"
            android:visibility="invisible" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>