<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cont_stack_gross_motor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:id="@+id/space14_gross_motor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="8.25"
            app:layout_constraintStart_toEndOf="@+id/iv_gross_motor_size_ref"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_gross_motor_size_ref"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:contentDescription="@string/cd_blank"
            android:cropToPadding="false"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/space14_gross_motor"
            app:layout_constraintHorizontal_weight="1.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_sidebar_empty" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cont_graph_gross_motor_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="6">

            <Space
                android:id="@+id/space_gross_motor_top_details"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_start_gross_motor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="2" />

            <Space
                android:id="@+id/space_gross_motor_bottom_details"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/space_gross_motor_center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_end_gross_motor"
                app:layout_constraintVertical_weight="2" />

            <Space
                android:id="@+id/space_end_gross_motor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/space_gross_motor_bottom_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toEndOf="@+id/space_gross_motor_center"
                app:layout_constraintTop_toBottomOf="@+id/space_gross_motor_top_details"
                app:layout_constraintVertical_weight="6" />

            <Space
                android:id="@+id/space_graph_container_gross_motor_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/graph_container_gross_motor"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/graph_container_gross_motor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:gravity="center_vertical|center_horizontal|fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/space_graph_container_gross_motor_end"
                app:layout_constraintHorizontal_weight="8"
                app:layout_constraintStart_toEndOf="@+id/space_graph_container_gross_motor_start"
                app:layout_constraintTop_toTopOf="parent">

            </RelativeLayout>

            <Space
                android:id="@+id/space_graph_container_gross_motor_end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/graph_container_gross_motor"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/space_gross_motor_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/space_end_gross_motor"
                app:layout_constraintHorizontal_weight="7"
                app:layout_constraintStart_toEndOf="@+id/tv_start_gross_motor"
                app:layout_constraintTop_toTopOf="parent">

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_start_gross_motor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                app:autoSizePresetSizes="@array/autosize_text_sizes"
                app:layout_constraintBottom_toTopOf="@+id/space_gross_motor_bottom_details"
                app:layout_constraintEnd_toStartOf="@+id/space_gross_motor_center"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_gross_motor_top_details"
                app:layout_constraintVertical_weight="6" />

            <Space
                android:id="@+id/space_end_gross_motor_padding"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_end_gross_motor"
                app:layout_constraintHorizontal_weight="7.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_end_gross_motor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/num_50"
                app:autoSizePresetSizes="@array/autosize_text_sizes"
                app:layout_constraintBottom_toTopOf="@+id/space_gross_motor_bottom_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="2.5"
                app:layout_constraintStart_toEndOf="@+id/space_end_gross_motor_padding"
                app:layout_constraintTop_toBottomOf="@+id/space_gross_motor_top_details"
                app:layout_constraintVertical_weight="6" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_gross_motor_graph_focus_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:gravity="bottom"
            android:text="@string/gross_motor"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            app:layout_constraintBottom_toTopOf="@+id/tv_gross_motor_graph_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent
"
            app:layout_constraintVertical_weight="2.5" />

        <TextView
            android:id="@+id/tv_gross_motor_graph_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            app:layout_constraintBottom_toTopOf="@+id/space_gross_motor_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gross_motor_graph_focus_title"
            app:layout_constraintVertical_weight="5" />

        <Space
            android:id="@+id/space_gross_motor_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gross_motor_graph_center"
            app:layout_constraintVertical_weight="2" />

        <Space
            android:id="@+id/space_gross_motor_title_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_gross_motor_graph_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="7" />

        <TextView
            android:id="@+id/tv_gross_motor_graph_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/overview"
            android:textAlignment="center"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space_gross_motor_title_top"
            app:layout_constraintVertical_weight="3" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>