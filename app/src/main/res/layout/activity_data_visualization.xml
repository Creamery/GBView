<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="seebee.geebeeview.layout.DataVisualizationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_data_visualization_title"
            style="@style/TitleText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"


            android:autoSizeTextType="uniform"

            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:text="@string/data_visualization"

            android:textAppearance="@style/DefaultText" />

        <TextView
            android:id="@+id/tv_dv_right_chart"
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/sp_right_chart_content"
            android:layout_weight="0.1"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"

            android:autoSizeTextType="uniform"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:text="@string/right_chart_content"

            android:textAlignment="center"
            android:textAppearance="@style/DefaultText" />

        <Spinner
            android:id="@id/sp_right_chart_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="0.3"
            android:autoSizeMaxTextSize="100sp"


            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:clipToPadding="false"


            android:entries="@array/right_chart_content_array"
            android:gravity="left|center_vertical"></Spinner>

        <TextView
            android:id="@+id/tv_dv_chart"
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"

            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"

            android:autoText="false"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:text="@string/chart"
            />

        <Spinner
            android:id="@+id/sp_chart_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"

            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"

            android:entries="@array/chart_type_array"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_dv_dataset"
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/dataset" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_dv_dataset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dv_filter"
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_dv_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn_add_dataset"
                        style="@style/DefaultButton"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"

                        android:text="@string/add_dataset" />

                    <Button
                        android:id="@+id/btn_add_filter"
                        style="@style/DefaultButton"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"

                        android:text="@string/add_filter" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn_view_hpi_list"
                        style="@style/DefaultButton"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"

                        android:text="@string/view_HPI_list" />

                    <Button
                        android:id="@+id/btn_view_patient_list"
                        style="@style/DefaultButton"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"

                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"

                        android:text="@string/view_patient_list" />

                    <TextView
                        android:id="@+id/tv_dv_data"
                        style="@style/LabelText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"

                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"

                        android:text="@string/displayed_data" />

                    <Spinner
                        android:id="@+id/sp_record_column"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"

                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"

                        android:entries="@array/record_column_array"></Spinner>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/graph_container_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="top"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/graph_container_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="top"></RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
