<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/tv_dataset_sname"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:marqueeRepeatLimit="10"
        android:text="@string/school"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tv_dataset_date"
        style="@style/DefaultText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:marqueeRepeatLimit="10"
        android:text="@string/dateCreated"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/cd_blank"
            app:layout_constraintBottom_toBottomOf="@id/btn_dataset_status"
            app:layout_constraintEnd_toEndOf="@id/btn_dataset_status"
            app:layout_constraintStart_toStartOf="@id/btn_dataset_status"
            app:layout_constraintTop_toTopOf="@id/btn_dataset_status"
            app:srcCompat="@color/theme_menu_button" />

        <Button
            android:id="@+id/btn_dataset_status"
            style="@style/DefaultButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_sidebar_down_arrow"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>